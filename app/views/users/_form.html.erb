<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group">
    <span class="input-group-addon"><%= f.label t('user.name') %></span>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <br>
  <div class="input-group">
    <span class="input-group-addon"><%= f.label t('user.email') %></span>
    <%= f.text_field :email, :class => "form-control" %>
  </div>
  <br>
  <% if current_user.role == "admin" %>
    <div class="input-group">
      <span class="input-group-addon"><%= f.label t('user.role') %></span>
      <%= f.text_field :role, :class => "form-control" %>
    </div>
    <br>
  <% end %>
  <div class="actions">
    <%= f.submit t('all.confirm'), :class => "btn btn-primary" %>
  </div>
<% end %>
