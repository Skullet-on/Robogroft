<div class="panel panel-default">
  <div class="panel-heading">
  <h4><%= t('user.listing') %></h4>
  </div>

  <div class="panel-body" style="max-height:800px; overflow-y: auto; bgcolor:#000000;">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t('user.name') %></th>
        <th><%= t('user.email') %></th>
        <th><%= t('user.role') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to t('all.show'), user, :class => 'btn btn-default btn-xs' %></td>
          <td><%= link_to t('all.edit'), edit_user_path(user), :class => 'btn btn-default btn-xs' %></td>
          <td><%= link_to t('all.delete'), user, method: :delete, data: { confirm: t('all.confirm') }, :class => 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <br>

  <%= link_to t('user.new'), new_user_registration_path, :class => 'btn btn-default btn-xs' %>
</div>