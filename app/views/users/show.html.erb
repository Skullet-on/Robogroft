<div class="panel panel-default">
	<div class="panel-heading">
		<h4><%= t('user.info') %></h4>
	</div>
	<div class="panel-body">
		<p id="notice"><%= notice %></p>

		<p>
		  <strong><%= t('user.name') %>:</strong>
		  <%= @user.name %>
		</p>

		<p>
		  <strong><%= t('user.email') %>:</strong>
		  <%= @user.email %>
		</p>

		<p>
		  <strong><%= t('user.role') %>:</strong>
		  <%= @user.role %>
		</p>
	</div>

	<%= link_to t('all.edit'), edit_user_path(@user), :class => 'btn btn-default btn-xs' %>
	<%= link_to t('all.back'), users_path, :class => 'btn btn-default btn-xs' %>
</div>
